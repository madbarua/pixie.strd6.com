%style
  :sass
    body > form
      margin-top: 8em

= stylesheet_link_tag 'branded'

- content_for :javascript do
  :coffeescript
    $ ->
      $('#user_email').focus()

= form_for user, :html => {:class => "module"} do |form|
  = form.error_messages
  %h2 Subscribe to Pixie!

  %label
    %h3 Email Address
    = form.text_field :email
  %label
    %h3 Password
    = form.password_field :password

  - if params[:new_game]
    = hidden_field_tag :new_game, true

  %button.full(type="submit" name="subscribe") Subscribe
